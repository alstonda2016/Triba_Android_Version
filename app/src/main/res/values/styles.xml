<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">12dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        android:text="Name"
    </style>

    <style name="barGrapButtons">
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>


</resources>
