<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/custom_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAdvancedInfoStrikedPostText"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="26dp"

        android:layout_marginRight="15dp"
        android:layout_marginStart="26dp"

        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAdvancedInfoStrikedPostReason"
        android:layout_width="145dp"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="9dp"

        android:layout_marginRight="16dp"
        android:layout_marginStart="9dp"

        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view"
        android:layout_width="4dp"
        android:layout_height="99dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="3dp"

        android:layout_marginRight="9dp"
        android:layout_marginStart="3dp"

        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/cast_expanded_controller_progress_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtAdvancedInfoStrikedPostReason"
        app:layout_constraintStart_toEndOf="@+id/txtAdvancedInfoStrikedPostText"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>