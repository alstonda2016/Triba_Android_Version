<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForTextInDarkColor"
    tools:context="com.davida.tatwpbnw.homePostWriteComment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_post_write_comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:elevation="4dp"
        android:navigationIcon="@color/colorForTextInDarkColor"

        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@color/colorForTextInDarkColor"
        app:navigationIcon="@drawable/ic_messager_back_icon" />

    <EditText
        android:id="@+id/txtHomePostWriteComment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_post_toolbar"
        android:background="@color/colorForTextInDarkColor"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>