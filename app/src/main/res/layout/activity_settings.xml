<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnotopfaded"
    android:orientation="vertical"
    tools:context="com.davida.tatwpbnw.settingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:navigationIcon="@color/colorForTextInDarkColor"

        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@color/colorForTextInDarkColor"
        app:navigationIcon="@drawable/ic_messager_back_icon"
        app:title="Settings">


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewSettingsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zxing_transparent"
        android:dividerHeight="5dp">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>
