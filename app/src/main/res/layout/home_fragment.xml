<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <!--
  android:layout_alignParentLeft="true"
  android:layout_alignParentStart="true"
  android:layout_alignParentTop="true"
  -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/MyProfile_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:navigationIcon="@color/colorSendMessageBack"
        android:textAlignment="center"
        app:titleTextColor="@color/cardview_light_background">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"
                app:srcCompat="@drawable/tribalogotextnoshadowontextcopy" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/tab_back"
                android:orientation="vertical"
                android:padding="0dp"
                android:stretchColumns="*"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@android:color/transparent"
                    android:padding="0dp">

                    <Button
                        android:id="@+id/button3"
                        style="@style/barGrapButtons"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"

                        android:padding="0dp"
                        android:text="New"
                        android:textAllCaps="false"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/button4"
                        style="@style/barGrapButtons"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:padding="0dp"

                        android:text="Hot Topic"
                        android:textAllCaps="false"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/button5"
                        style="@style/barGrapButtons"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"

                        android:padding="0dp"
                        android:text="Popular"
                        android:textAllCaps="false"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/button6"
                        style="@style/barGrapButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"

                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:text="Close By"
                        android:textAllCaps="false"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="15sp" />


                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/txtHomeFragTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textStyle="italic" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height=".8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:background="@color/cardview_light_background" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_of_posts_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:visibility="visible">


    </android.support.v7.widget.RecyclerView>


